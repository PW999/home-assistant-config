sensor:
  - platform: template
    sensors:
      <%= location_name.downcase %>_temperature_corrected:
        friendly_name: <%= location_name %> temperature
        unit_of_measurement: Â°C
        device_class: temperature
        availability_template: "{{ not is_state('<%= sensor_id %>', 'unavailable')  }}"
        value_template: "{{ (float(states('<%= sensor_id %>')) <%= temperature_offset %>) | round(1) }}"
